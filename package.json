{
  "name": "pulsifer.ca",
  "version": "0.1.0",
  "private": true,
  "sideEffects": "false",
  "homepage": "https://pulsifer.ca",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-brands-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.13",
    "@shopify/polaris": "^5.10.2",
    "@shopify/typescript-configs": "^3.0.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "typescript": "4.1.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@shopify/jest",
      "plugin:@shopify/polaris",
      "plugin:@shopify/prettier",
      "plugin:@shopify/react",
      "plugin:@shopify/typescript"
    ]
  },
  "prettier": "@shopify/prettier-config",
  "stylelint": {
    "extends": [
      "@shopify/stylelint-plugin/prettier"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@shopify/react-testing": "^2.1.4",
    "@types/jest": "^26.0.17",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.0.6",
    "css-loader": "^5.0.1",
    "file-loader": "^6.2.0",
    "gh-pages": "^3.1.0",
    "html-webpack-plugin": "^4.5.0",
    "jest": "^26.6.3",
    "rimraf": "^3.0.1",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.11",
    "webpack": "^5.9.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.10.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-react",
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-react-jsx"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": ["./src/tests/setupTests.ts"]
  },
  "scripts": {
    "prebuild": "rimraf ./build",
    "build": "yarnpkg run webpack",
    "predeploy": "yarnpkg run build && cp -v CNAME ./build",
    "deploy": "yarnpkg run gh-pages -d build",
    "start": "webpack-dev-server",
    "test": "yarnpkg run jest --no-watch"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
